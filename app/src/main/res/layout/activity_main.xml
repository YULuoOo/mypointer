<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_home_page"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_above="@+id/view_center"
        android:layout_marginBottom="20dp"
        android:text="指针，新世界"
        android:textSize="24dp"
        android:textColor="@color/white"/>

    <View
        android:id="@+id/view_center"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true">
    </View>

    <Button
        android:id="@+id/btn_start_video"
        android:layout_width="260dp"
        android:layout_height="55dp"
        android:background="@drawable/bg_start_preview_button"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/view_center"
        android:layout_marginTop="60dp"
        android:text="发现指针"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/btn_start_info"
        android:layout_width="260dp"
        android:layout_height="55dp"
        android:background="@drawable/bg_start_preview_button"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_start_video"
        android:layout_marginTop="40dp"
        android:text="我的指针"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/test"
        android:layout_width="260dp"
        android:layout_height="55dp"
        android:layout_below="@+id/btn_start_info"
        android:text="定位"
        />
    <Button
        android:id="@+id/location"
        android:layout_width="260dp"
        android:layout_height="55dp"
        android:layout_below="@+id/btn_start_video"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="63dp"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="-135dp"
        android:background="@drawable/bg_start_preview_button"
        android:gravity="center"
        android:text="测试"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:text="@string/version"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>